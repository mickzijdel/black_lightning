<%= render layout: '/shared/form/fields_for_template', locals: { 
        f: f,
        div_class_additions: 'budget_line',
        attributes: [:name, :allocated, :transaction_type, :budget_id]
    } do %>
    <%= f.hint "Actual: #{f.object.actual}" %>
    <%= f.input_field :name, placeholder: 'Name', autocomplete: 'off', data: { provide: "typeahead", source: budget_line_typeahead } %>
    <%= f.input_field :allocated %>
    <%= f.input_field :transaction_type, collection: enum_collection(Finance::BudgetLine, 'transaction_type'), disabled: f.object.requests_attached? %>
    <%= link_to_remove f %>
<% end %>
