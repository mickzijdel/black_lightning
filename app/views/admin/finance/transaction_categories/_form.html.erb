<%= simple_form_for([:admin, @transaction_category]) do |f| %>
  <%= f.error_notification %>

<div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :hint %>
      
      <%= render "/shared/form/md_editor", f: f, field: :description, rows: 12, show_hint: true %>

      <%= f.association :nominal_code %>

      <%= f.input :transaction_type, collection: enum_collection(Finance::TransactionCategory, 'transaction_type') %>

      <%= f.input :active %>
  </div>

  <%= render '/shared/form/form_actions', f: f %>
<% end %>
