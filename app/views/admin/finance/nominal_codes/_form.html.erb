<%= simple_form_for [:admin, @nominal_code] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :code %>
    <%= f.input :name %>
    <%= f.input :active %>

    <%= render "/shared/form/md_editor", f: f, field: :description, rows: 12, show_hint: true %>
  </div>

  <%= render '/shared/form/form_actions', f: f %>
<% end %>
